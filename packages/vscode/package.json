{
  "publisher": "pickier",
  "name": "pickier-vscode",
  "displayName": "Pickier",
  "type": "module",
  "version": "0.1.7",
  "description": "Format, lint and more in a fraction of seconds with Pickier",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/pickier#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/stacksjs/pickier.git",
    "directory": "packages/vscode"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/pickier/issues"
  },
  "keywords": [
    "formatter",
    "linter",
    "typescript",
    "javascript",
    "bun",
    "fast"
  ],
  "categories": [
    "Formatters",
    "Linters"
  ],
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.103.0"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:json",
    "onLanguage:jsonc",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:markdown",
    "onLanguage:yaml"
  ],
  "contributes": {
    "commands": [
      {
        "command": "pickier.format",
        "title": "Format Document",
        "category": "Pickier"
      },
      {
        "command": "pickier.formatSelection",
        "title": "Format Selection",
        "category": "Pickier"
      },
      {
        "command": "pickier.lint",
        "title": "Lint Document",
        "category": "Pickier"
      },
      {
        "command": "pickier.lintWorkspace",
        "title": "Lint Workspace",
        "category": "Pickier"
      },
      {
        "command": "pickier.organizeImports",
        "title": "Organize Imports",
        "category": "Pickier"
      },
      {
        "command": "pickier.fixAll",
        "title": "Fix All Auto-fixable Issues",
        "category": "Pickier"
      },
      {
        "command": "pickier.showOutputChannel",
        "title": "Show Output Channel",
        "category": "Pickier"
      },
      {
        "command": "pickier.restartExtension",
        "title": "Restart Extension",
        "category": "Pickier"
      },
      {
        "command": "pickier.showRuleDocumentation",
        "title": "Show Rule Documentation",
        "category": "Pickier"
      },
      {
        "command": "pickier.disableRule",
        "title": "Disable Rule",
        "category": "Pickier"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Pickier",
      "properties": {
        "pickier.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Pickier extension"
        },
        "pickier.configPath": {
          "type": "string",
          "default": "",
          "description": "Path to Pickier config file (relative to workspace root)"
        },
        "pickier.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Format files on save"
        },
        "pickier.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Lint files on save"
        },
        "pickier.lintOnChange": {
          "type": "boolean",
          "default": true,
          "description": "Lint files as you type (with 500ms debounce)"
        },
        "pickier.formatOnPaste": {
          "type": "boolean",
          "default": false,
          "description": "Format pasted code automatically"
        },
        "pickier.showOutputChannel": {
          "type": "boolean",
          "default": false,
          "description": "Show Pickier output channel"
        },
        "pickier.codeActions.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable code actions (quick fixes) for auto-fixable issues"
        },
        "pickier.statusBar.showIssueCount": {
          "type": "boolean",
          "default": true,
          "description": "Show issue count in status bar"
        },
        "pickier.codeLens.enable": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens annotations at the top of files with quick actions and issue counts"
        },
        "pickier.documentation.baseUrl": {
          "type": "string",
          "default": "https://pickier.netlify.app",
          "description": "Base URL for rule documentation (used in 'View Rule Documentation' action)"
        }
      }
    },
    "languages": [
      {
        "id": "typescript",
        "extensions": [
          ".ts",
          ".tsx"
        ]
      },
      {
        "id": "javascript",
        "extensions": [
          ".js",
          ".jsx"
        ]
      },
      {
        "id": "json",
        "extensions": [
          ".json"
        ]
      },
      {
        "id": "jsonc",
        "extensions": [
          ".jsonc"
        ]
      },
      {
        "id": "html",
        "extensions": [
          ".html"
        ]
      },
      {
        "id": "css",
        "extensions": [
          ".css"
        ]
      },
      {
        "id": "markdown",
        "extensions": [
          ".md"
        ]
      },
      {
        "id": "yaml",
        "extensions": [
          ".yaml",
          ".yml"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run build",
    "build": "bun build.ts",
    "watch": "bun build ./src/extension.ts --external vscode --outdir dist --format esm --watch",
    "pretest": "bun run compile && bun run lint",
    "lint": "eslint src --ext ts",
    "test": "bun test",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "dependencies": {
    "pickier": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "1.2.20",
    "@types/vscode": "^1.106.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0"
  }
}
